<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SmsActivity">

    <EditText
        android:id="@+id/edt_nomor_tujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="No Tujuan"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edt_body_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:hint="Body sms"
        android:inputType="textMultiLine"
        android:lines="5" />

    <Button
        android:id="@+id/btn_kirim_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Sms" />

    <Button
        android:id="@+id/btn_kirim_sms_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim sms intent" />
</LinearLayout>